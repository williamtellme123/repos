create table music_artist
        (artist_id      number primary key,
        artist_name    varchar2(128),
        lives_in_city   varchar2(75),
        born_in_city    varchar2 (75) );
               
select * from music_artist;

create table music_song
          (song_id               number primary key,
          artists_id              number,
          song_title            varchar2 (75),
          song_writer            varchar2 (75),
          length_seconds    number,
         CONSTRAINT song_id_fk FOREIGN KEY (artists_id) REFERENCES music_artist (artist_id));


select * from music_song;


create table music_album
      (album_id     number primary key,
      album_name    varchar2 (35),
      label         varchar2 (25),
      year_released varchar2 (4) );
      
select * from music_album;
      
create table music_track
      (track_id               number primary key,
       aid                number,
       sid                 number,
       song_sequence_on_album  number,
       CONSTRAINT album_id_fk FOREIGN KEY (aid) REFERENCES music_album (album_id),
       CONSTRAINT music_id_fk FOREIGN KEY (sid) REFERENCES music_song (song_id));
 drop table music_track;     
select * from music_track;

commit;

